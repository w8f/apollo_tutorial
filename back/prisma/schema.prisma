generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev/db"
}

model Link {
  id          Int      @default(autoincrement()) @id
  createdAt   DateTime @default(now())
  description String
  url         String
  postedBy    User?    @relation(fields: [postedById], references: [id])
  postedById  Int?
}

model User {
  id       Int    @default(autoincrement()) @id
  name     String
  email    String @unique
  password String
  links    Link[]
}
